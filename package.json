{
  "name": "ai-kit",
  "private": true,
  "version": "0.1.33",
  "workspaces": [
    "blocklets/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "author": "Arcblock <blocklet@arcblock.io> https://github.com/blocklet",
  "scripts": {
    "dev": "pnpm -F ai-kit dev",
    "bundle": "pnpm build:libs && pnpm -F ai-kit bundle",
    "lint": "pnpm -r run lint",
    "build": "pnpm build:libs && pnpm -F ai-kit build",
    "build:libs": "pnpm -F @blocklet/ai-kit build",
    "clean": "pnpm -r run clean",
    "prepare": "husky install",
    "bump-version": "zx scripts/bump-version.mjs",
    "update:deps": "npx -y taze -r -w && pnpm install"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "importSort": {
    ".js, .jsx, .mjs": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "devDependencies": {
    "@arcblock/eslint-config": "^0.2.4",
    "@arcblock/eslint-config-ts": "^0.2.4",
    "bumpp": "^8.2.1",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-import-sort": "^0.0.7",
    "rimraf": "^3.0.2",
    "typescript": "^5.4.5",
    "zx": "^7.2.3"
  },
  "resolutions": {
    "@arcblock/did": "^1.18.117",
    "@arcblock/did-auth": "^1.18.117",
    "@arcblock/did-ext": "^1.18.117",
    "@arcblock/did-util": "^1.18.117",
    "@arcblock/event-hub": "^1.18.117",
    "@arcblock/jwt": "^1.18.117",
    "@arcblock/validator": "^1.18.117",
    "@arcblock/ws": "^1.18.117",
    "@ocap/asset": "^1.18.117",
    "@ocap/client": "^1.18.117",
    "@ocap/types": "^1.18.117",
    "@ocap/util": "^1.18.117",
    "@ocap/wallet": "^1.18.117",
    "axios": "^1.6.8",
    "prettier": "^2.8.8"
  }
}
